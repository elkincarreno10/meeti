<div class="contenedor">
    <h1><%= nombrePagina %></h1>
    <% if(meetis.length > 0) { %>
    <div class="grid columnas-md-3 ">
        <% meetis.forEach(meeti => { %>
            <div class="card">
                <% if(meeti.grupo.imagen) { %>
                    <img src="/uploads/grupos/<%= meeti.grupo.imagen %>">
                <% } else { %>
                    <img src="/img/meeti.jpg">
                <% } %>
                <div class="card-texto">
                    <p class="fecha"><%= formatearFecha(meeti.fecha) + ' ' + formatearHora(meeti.hora) %></p>
                    <a href="/meeti/<%= meeti.slug %>">
                        <h3><%= meeti.titulo %></h3>
                    </a>
                    <div class="info-autor">
                        <div class="imagen">
                            <% if(meeti.usuario.imagen) { %>
                                <img src="/uploads/perfiles/<%= meeti.usuario.imagen %>">
                            <% } %>
                        </div>
                        <div class="informacion">
                            <p>Organizado por:</p>
                            <p class="autor"><%= meeti.usuario.nombre %></p>
                        </div>
                    </div>

                </div>
            </div>
        <% }) %>
    </div>
    <% } else { %>
        <p>No hay resultados</p>
    <% } %>
</div>