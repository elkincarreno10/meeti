<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(grupos.length > 0 )  { %>
                    <% grupos.forEach(grupo => {  %>
                        <option <%= (meeti.grupoId === grupo.id) ? 'selected' : '' %> value="<%= grupo.id %>"><%= grupo.nombre %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" value="<%= meeti.titulo %>" placeholder="Titulo Meeti">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" value="<%= meeti.invitado %>" placeholder="Nombre Invitado o Ponente (si aplica)">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" value="<%= meeti.fecha %>" placeholder="Fecha Meeti">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" value="<%= meeti.hora %>" placeholder="Hora Meeti">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" value="<%= meeti.cupo %>" placeholder="Cupo Meeti (si aplica)">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= meeti.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>

        <h3>Coloca la Dirección del Meeti</h3>

        <div class="campo mapa">
            <div id="mapa"></div>
        </div>
        <p class="informacion"> - Mueve el Pin hacia el punto exacto en caso de ser necesario</p>

        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" value="<%= meeti.direccion %>" placeholder="Dirección">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" value="<%= meeti.ciudad %>" placeholder="Ciudad">
        </div>
        <div class="campo">
            <label>Departamento</label>
            <input type="text" id="departamento" name="departamento" value="<%= meeti.departamento %>" placeholder="Departamento">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" value="<%= meeti.pais %>" placeholder="País">
        </div>
            <input type="hidden" id="lat" name="lat" value="<%= meeti.ubicacion[0] %>">
            <input type="hidden" id="lng" name="lng" value="<%= meeti.ubicacion[1] %>">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>
    </form>
</main>